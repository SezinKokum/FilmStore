<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tatlicilar.bookstore.HomePage">

    <ListView
        android:layout_width="377dp"
        android:layout_height="381dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="122dp"
        android:id="@+id/filmler"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text=""
        android:layout_above="@+id/filmler"
        android:layout_alignParentStart="true"
        android:onClick="onClick"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_above="@+id/filmler"
        android:layout_toEndOf="@+id/haftalik"
        android:layout_marginStart="16dp"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/biletAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bilet Al"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_below="@+id/haftalik"
        android:layout_alignEnd="@+id/checkBox" />

    <TextView
        android:id="@+id/seansAra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seans Ara"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_above="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton" />

    <TextView
        android:id="@+id/haftalik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bu Hafta Öne Çıkanlar"
        android:textSize="30dp"
        android:textColor="#b266b2"
        android:textStyle="bold"
        android:layout_above="@+id/seansAra"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Hosgeldin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hosgeldin"
        android:textColor="#b266b2"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/filmler"
        android:layout_marginTop="12dp" />

</RelativeLayout>
